<%= form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "First name" %><br>
    <%= f.text_field :firstname, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Last name" %><br>
    <%= f.text_field :lastname, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.number_field :phone, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Done", :class => "btn btn-primary" %>
    <%= link_to "Cancel", :back, :class => "btn btn-default" %>
  </div>
<% end %>

<% if action_name == 'edit' %>

<hr>

<h4>No longer seeing this client?</h4>
      <p>Hide <%= @patient.firstname %> <%= @patient.lastname %> so they don't show up in your client list. You'll still be able to access their notes.</p>
      <%= button_to "Hide this client", patient_path, data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger" %>

<% end %>